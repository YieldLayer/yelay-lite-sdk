{
	"name": "@yelay-lite/sdk",
	"type": "module",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"exports": {
		".": {
			"types": "./build/index.d.ts",
			"import": "./build/index.js"
		}
	},
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"version": "2.0.0",
	"description": "Yelay Lite SDK",
	"repository": {
		"type": "git",
		"url": "https://github.com/YieldLayer/yelay-lite-sdk.git"
	},
	"files": [
		"build"
	],
	"scripts": {
		"gen-types": "typechain --target=ethers-v5 --out-dir=src/generated/typechain src/abis/*.json",
		"build": "pnpm run gen-types && rimraf ./build && tsc",
		"test": "jest --config jest.config.ts",
		"version:beta:new": "npm version preminor --preid=beta --no-git-tag-version",
		"version:beta:patch": "npm version prepatch --preid=beta --no-git-tag-version",
		"version:beta:increment": "npm version prerelease --preid=beta --no-git-tag-version",
		"version:stable:patch": "npm version patch --no-git-tag-version",
		"version:stable:minor": "npm version minor --no-git-tag-version",
		"version:stable:major": "npm version major --no-git-tag-version",
		"release:tag": "git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\")\"",
		"release:push": "git push origin main && git push origin --tags"
	},
	"keywords": [
		"yelay",
		"wallet",
		"yield",
		"blockchain",
		"ethereum"
	],
	"license": "ISC",
	"peerDependencies": {
		"@gud/drift": "^1.0.2"
	},
	"devDependencies": {
		"@types/node": "22.13.4",
		"@typescript-eslint/eslint-plugin": "8.17.0",
		"@typescript-eslint/parser": "8.17.0",
		"dotenv": "16.4.7",
		"rimraf": "6.0.1",
		"ts-node": "10.9.2",
		"typescript": "5.6.2"
	},
	"jest": {
		"testTimeout": 200000
	}
}
