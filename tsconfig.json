{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"declaration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"outDir": "./build",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__tests__/*", "tests/**/*"]
}
