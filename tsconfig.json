{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"declaration": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"outDir": "./build",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"types": ["jest", "node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__tests__/*", "tests/**/*"]
}
